<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaptureMoment"
    android:background="@color/background">


    <Button
        android:id="@+id/btnCaptureMoment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_moment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textAddCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_caption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCaptureMoment" />

    <EditText
        android:id="@+id/editAddCaption"
        android:hint="This moment is about..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textAddCaption"/>

</android.support.constraint.ConstraintLayout>